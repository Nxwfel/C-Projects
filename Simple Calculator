#include <stdio.h>
#include <stdlib.h>
// THIS IS A CODE FOR A SIMPLE CALCULATOR
int main()
{
   float Value1,Value2,Solution,Rating,I;
   int Operation;
   printf("Simple Calculator :\n");
   sleep(1);

   printf("Choose Wanted Operation :\n\t");

   sleep(1);

   printf("1.Division\t 2.Addition\t 3.substraction\t 4.Multiplying :\n");

   scanf("%d",&Operation);
      if (Operation <1){
    printf("Error!!");
    exit(0);
      }
       if (Operation >4){
    printf("Error!!");
    exit(0);
   }


   if(Operation==1,2,3,4){

    switch(Operation){

    case 1: printf("Define Value1 :\n");
    scanf("%f",&Value1);
    printf("Define Value2 :\n");
    scanf("%f",&Value2);
    Solution = Value1 / Value2;
    printf("The operation you made resulted %f\n",Solution);
break;

     case 2: printf("Define Value1 :\n");
    scanf("%f",&Value1);
    printf("Define Value2 :\n");
    scanf("%f",&Value2);
    Solution = Value1 + Value2;
    printf("The operation you made resulted %f\n",Solution);
break;

     case 3: printf("Define Value1 :\n");
    scanf("%f",&Value1);
    printf("Define Value2 :\n");
    scanf("%f",&Value2);
    Solution = Value1 - Value2;
    printf("The operation you made resulted %f\n",Solution);
break;

     case 4: printf("Define Value1 :\n");
    scanf("%f",&Value1);
    printf("Define Value2 :\n");
    scanf("%f",&Value2);
    Solution = Value1 * Value2;
    printf("The operation you made resulted %f\n",Solution);
break;

    }
   }
   sleep(1);
   printf("Rate this work on your own scale \n ");
   scanf("%f",&Rating);
   printf("Thank you sir.");

}
